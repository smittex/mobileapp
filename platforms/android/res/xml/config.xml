<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.helloCordova" version="2.0.0" xmlns="http://www.w3.org/ns/widgets">
    <name>3M Hearing Solutions Product Selection Guide</name>
    <description>
        3M Hearing Solutions Product Selection Guide
    </description>
    <author email="bryan.smith@solutiondesign.com" href="http://www.theshinebox.com/">
        Bryan Smith
    </author>
    <content src="index.html" />
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <access origin="http://127.0.0.1*" />
    <access origin="http://link.brightcove.com/*" />
    <access origin="http://3m.com/*" />
    <access origin="http://fonts.googleapis.com/*" />
    <preference name="useBrowserHistory" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="orienation" value="portrait" />
    <preference name="target-device" value="handset" />
    <preference name="phonegap-version" value="2.9.0" />
</widget>
